{
  "name": "rural-hardware-store",
  "version": "1.0.0",
  "description": "Retail management system for rural hardware stores",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run start\" \"npm run watch\"",
    "watch": "nodemon --exec electron .",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "Rural Hardware Store",
  "license": "MIT",
  "dependencies": {
    "electron-store": "^8.1.0",
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.10.0",
    "sqlite3": "^5.1.6",
    "sequelize": "^6.31.0",
    "bootstrap": "^5.2.3",
    "react-bootstrap": "^2.7.4",
    "react-icons": "^4.8.0",
    "chart.js": "^4.2.1",
    "react-chartjs-2": "^5.2.0",
    "electron-updater": "^5.3.0",
    "pdfkit": "^0.13.0",
    "moment": "^2.29.4"
  },
  "devDependencies": {
    "concurrently": "^8.0.1",
    "electron": "^24.1.2",
    "electron-builder": "^23.6.0",
    "nodemon": "^2.0.22"
  },
  "build": {
    "appId": "com.ruralhardware.app",
    "productName": "Rural Hardware Store",
    "mac": {
      "category": "public.app-category.business"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "category": "Office"
    }
  }
}